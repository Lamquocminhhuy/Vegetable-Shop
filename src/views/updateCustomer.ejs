


  <div class="modal" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
      

        <div class="modal-header">
          <h4 class="modal-title">Update Customer Information</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        

        <div class="modal-body">
          <% if (customer) { %>
          <form action="/update-customer-infor" method="POST">
            <div class="form-row">
              <input type="hidden" id="custId" name="id" value="<%= customer.id %>">
              <div class="form-group col-md-6">
                <label for="inputEmail4">Email</label>
                <input disabled type="email" class="form-control"  placeholder="<%= customer.email %>" name="email">
              </div>
              <div class="form-group col-md-6">
                <label for="inputPassword4">Password</label>
                <input disabled type="password" class="form-control"  value="123123123" name="password">
              </div>
            </div>
            <div class="form-group">
              <label for="inputAddress">Full Name</label>
              <input type="text" class="form-control" id="inputAddress" name="fullname">
            </div>
            <div class="form-group">
              <label for="inputAddress2">Address </label>
              <input type="text" class="form-control" id="inputAddress2" name="address">
            </div>
          
            <div class="form-row">
              <div class="form-group col-md-4">
                <label for="inputAddress2">Phone Number </label>
                <input type="text" class="form-control" id="inputAddress2" name="phonenumber">
              </div>
              <div class="form-group col-md-8">
                <label for="inputState">Gender</label>
                <select id="inputState" class="form-control" name="gender">
                  <option value="#">Choose...</option>
                  <option value="M">Male</option>
                  <option value="F">Female</option>
                </select>
              </div>
            </div>
      
            <button type="submit" class="btn btn-primary">Create</button>
      
          </form>
          <% } %>
        </div>
        

     
        
      </div>
    </div>
  </div>
  
