<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.">
    <%- include('../partials/head.ejs'); %>

    <link rel="stylesheet" type="text/css" href="css/homepage.css">


    <title>Home Page</title>
</head>
<body>

  <!-- Navigation Bar -->

  <%- include('../homepage/navbar.ejs'); %>
  

    <!-- JUMBOTRON -->
  <section class="main">
    <div class="container">
      <h1 class="text-center">Best Seller</h1>
      <div class="row">
        <div class="col">
       
          <div class="col-md-3 mx-3 my-3 col-sm-6 px-2 py-2">
            <img src="data:image/png;base64,<%= product.image %>" style="height: 250px; width: 250px; border-radius: 25px;">
          </div>
        </div>
        <div class="col">
          <p><%= product.name %></p>
          <p class="card-text"><%= product.description %></p>
          <p class="card-text">Avaible: <%= product.amount %></p>
          <p class="card-text">Price: <%= product.priceData.value %>$</p>
          <% if (product.amount > 0) { %>
            <button class="btn btn-info " data-bs-toggle="modal"
            data-bs-target="#buyModal"> Buy Me</button>
            <% } else {%>
              <div class="col-12 ">
                <button type="submit" class="btn btn-warning disabled">Sold out ! Come back later </button>
              </div>
              <% } %>
            
        </div>
      </div>
     
    </div>
    
     
      
    
  </section>

  <%- include('buyProduct'); %>


  <%- include('../partials/footer.ejs'); %>
  
</body>
</html>