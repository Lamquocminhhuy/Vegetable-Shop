<body>

  <!-- Navigation Bar -->

  <%- include('../homepage/navbar.ejs'); %>
  

    <!-- JUMBOTRON -->
  <section class="main">
    <div class="container">
      <% if (product) { %>
        <p><%= product.name %></p>
        <p class="card-text"><%= product.description %></p>
        <p class="card-text">Avaible: <%= product.amount %></p>
      <div class="col-md-3 mx-3 my-3 col-sm-6 px-2 py-2  card">
        <img src="data:image/png;base64,<%= product.image %>" class="card-img-top rounded mx-auto d-block ">
      
      </div>
      <% if (product.amount > 0) { %>
      <button class="btn btn-info " data-bs-toggle="modal"
      data-bs-target="#buyModal"> Buy Me</button>
      <% } else {%>
        <div class="col-12 ">
          <button type="submit" class="btn btn-warning disabled">Sold out ! Come back later </button>
        </div>
        <% } %>
      <% } %>
    </div>
  </section>
