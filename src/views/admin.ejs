<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<%- include('./partials/head.ejs'); %>
		<title>Admin Site</title>
		<link rel="stylesheet" type="text/css" href="css/admin.css">
</head>

<body>
	<!--  Syntax để include navbar      -->
	<%- include('./partials/navbar.ejs'); %>
		<div class="container-fluid">
			<br>
			<div class="row">
				<div class="col">
					<div class="col-md">
						<div class="card text-center text-white  mb-3" id="total-orders">
							<div class="card-header">
								<h5 class="card-title">Total Orders</h5>

							</div>
							<div class="card-body">
								<h3 class="card-title">4</h3>
							</div>
						</div>
					</div>
				</div>
				<div class="col">
					<div class="col-md">
						<div class="card text-center text-white  mb-3" id="orders-delivered">
							<div class="card-header">
								<h5 class="card-title">Orders Delivered</h5>
							</div>
							<div class="card-body">
								<h3 class="card-title">3</h3>
							</div>
						</div>
					</div>
				</div>

				<div class="col">
					<div class="col-md">
						<div class="card text-center text-white  mb-3" id="orders-pending">
							<div class="card-header">
								<h5 class="card-title">Orders Pending</h5>
							</div>
							<div class="card-body">
								<h3 class="card-title">0</h3>
							</div>
						</div>
					</div>
				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-md-5">
					<h5>CUSTOMERS:</h5>
					<hr>
					<div class="card card-body">
						<a class="btn btn-primary  btn-sm btn-block" href="/admin-create-user">Create Customer</a>
						<table class="table table-sm">


							<tr>
								<th></th>
								<th>Customer</th>
								<th>Phone</th>
							</tr>
							<% for (let i=0; i < data.length; i++) {  %>
								<tr>
									<td><a class="btn btn-sm btn-info" href="/customer-detail?id=<%= data[i].id %>">View</a></td>
									<td>
										<%= data[i].fullname %>
									</td>
									<td>
										<%= data[i].phonenumber %>
									</td>
								</tr>

								<% } %>
						</table>
					</div>
				</div>

				<div class="col-md-7">
					<h5>LAST 5 ORDERS</h5>
					<hr>
					<div class="card card-body">

						<table class="table table-sm">
							<tr>
								<th>Product</th>
								<th>Date Orderd</th>
								<th>Status</th>
								<th>Update</th>
								<th>Remove</th>
							</tr>

							<tr>
								<td></td>
								<td></td>
								<td></td>
								<td><a class="btn btn-sm btn-info" href="/update_order/4/">Update</td>
								<td><a class="btn btn-sm btn-danger" href="/delete_order/4/">Delete</td>
							</tr>
							<tr>
								<td></td>
								<td></td>
								<td></td>
								<td><a class="btn btn-sm btn-info" href="/update_order/4/">Update</td>
								<td><a class="btn btn-sm btn-danger" href="/delete_order/4/">Delete</td>
							</tr>
							<tr>
								<td></td>
								<td></td>
								<td></td>
								<td><a class="btn btn-sm btn-info" href="/update_order/4/">Update</td>
								<td><a class="btn btn-sm btn-danger" href="/delete_order/4/">Delete</td>
							</tr>



						</table>
					</div>
					
		</div>

			<%- include('./partials/footer.ejs'); %>	
				
	
	
			
				
					
			
</body>

</html>