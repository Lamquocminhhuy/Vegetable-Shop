
  <div class="modal" id="updateModal" >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Update Product <P></P></h4>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">


   
          <form class="row g-3"  method="POST">
      
            <div class="col-md-3">
              <label for="inputEmail4" class="form-label">Product Name</label>
              <input  type="text" class="form-control"   name="name" value="<%= product[i].name %>">
            </div>
            <div class="col-md-3">
               
              <label for="inputPassword4" class="form-label">Price</label>
       
              <select id="inputState" class="form-control" name="priceId" >
               
                <option>$</option>
              
              </select>
            </div>
            <div class="col-md-3">
                <label for="inputCity" class="form-label">Status</label>
                <select id="inputState" class="form-control" name="productStatus" >
              
                
                  <option ></option>

               
                </select>
              </div>
            <div class="col-3">
              <label for="inputAddress" class="form-label">Description</label>
              <input type="text" class="form-control" id="inputAddress" name="description" value="<%= product.description %>">
            </div>
            <div class="col-6">
              <label for="inputAddress2" class="form-label">Amount</label>
              <input type="text" class="form-control" id="inputAddress2" name="amount" value="<%= product.amount %>">
            </div>
            <div class="col-6">
                <label for="inputAddress2" class="form-label">Image</label>
                <input type="text" class="form-control" id="inputAddress2" name="image" >
              </div>
           
    
            <div class="col-12">
             
            <button type="submit" class="btn btn-primary">Save</button>
            </div>
      
          </form>
   
        </div>    
      </div>
    </div>
  </div>
  
