<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/head.ejs'); %>
    <title>Admin</title>
</head>
<body>
    <%- include('../partials/navbar.ejs'); %>
    <div class="container-fluid">	
        <br>
        <br>
        <h3 class="card-title text-center">Update Order Status</h3>
        <br>
        
        <div class="row">
            
           
            <div class="col-6">
                <div class="card card-body">
                  <% if (order) { %>
                    <p>Quantity:    <%= order.quantity %></p>
                    <p>Customer Name: 	<%= order.customerData.fullname %></p>
                    <p>Phone Number: 	<%= order.customerData.phonenumber %></p>
                    <p>Customer Adress: <%= order.customerData.address %></p>
                    <p>Product Ordered: <%= order.createdAt %></p>
                   
                
                  
              
              
               
                <% } %>
                   
                </div>
            </div>
          
           
            <div class="col-6">             
                <div class="card card-body">
                    <% if (order) { %>
                    <p style="color: blue;">Status:    <%= order.orderStatusData.value %></p>
                    <% } %>
                    <form class="row g-3" action="/update-order" method="POST">
                        <input type="hidden" id="custId" name="id" value="<%= order.id %>">

                        <div class="col-md-12">
                          <label for="inputState" class="form-label">Order Status</label>
                          <select id="inputState" class="form-control" name="status" >
                            <% for (let i=0; i < status.length; i++) { %>
                                <option value="<%= status[i].keyMap %>" > <%= status[i].value %></option>              
                            <% } %>
                          </select>
                        </div>
                
                        <div class="col-12">
                         
                        <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                      </form>
            
        </div>      
      

</body>
</html>