<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('../partials/head.ejs'); %>
</head>
<body>  
     <%- include('../partials/navbar.ejs'); %>
    <div class="container-fluid">	
        <br>
        
        <div class="row">
            <div class="col-md">
                <div class="card card-body">
                    <% if (customer.gender == 'M') { %>
                    <h5>Customer: Mr <%=  customer.fullname %></h5>
                    <% } else { %>
                    <h5>Customer: Mrs <%=  customer.fullname %></h5>
                    <% } %>
                    <hr>
                    <button class="btn btn-outline-info  btn-sm btn-block"  data-toggle="modal" data-target="#myModal">Update Customer</button>
                    <a class="btn btn-outline-danger  btn-sm btn-block" href="#">Place Order</a>
                    <a class="btn btn-outline-warning  btn-sm btn-block" href="/delete-customer?id=<%=customer.id%>">Delete Customer</a>
                </div>
            </div>
         
            <%- include('updateCustomer.ejs'); %>
            <div class="col-md">
                <% if (customer) { %>
                <div class="card card-body">
                    <h5>Contact Information</h5>
                    <hr>
                    
                    <p>Email: 	<%= customer.email %></p>
                    <p>Phone: <%= customer.phonenumber %></p>
                    <p>Address: <%= customer.address %></p>
                </div>
                <% } %>
            </div>
         
        
            <div class="col-md">
                <div class="card card-body">
                    <h5>Total Orders</h5>
                    <hr>
                    <h1 style="text-align: center;padding: 10px"></h1>
                </div>
            </div>
        </div>
        
        
        <br>
     
        <br>
        
        <div class="row">
            <div class="col-md">
                <div class="card card-body">
                    <table class="table table-sm">
                        <tr>
                            <th>Product</th>
                            <th>Note</th>
                            <th>Date Orderd</th>
                            <th>Status</th>
                            <th>Update</th>
                            <th>Remove</th>
                        </tr>
                        
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><a class="btn btn-sm btn-info" href="#">Update</a></td>
                            <td><input class="btn btn-sm btn-danger" type="submit" name="Confirm"></td>
        
                            
                        </tr>
                        
                   
                        
        
                    </table>
                </div>
            </div>
        </div>
        
        
    </div>
</body>
</html>